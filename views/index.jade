doctype html
html(lang="eng")
	head
		link(href='assets/css/normalize.css', rel='stylesheet')
		link(href='assets/css/skeleton.css', rel='stylesheet')
		link(href='assets/css/main.css', rel='stylesheet')
		script(src="http://code.jquery.com/jquery-2.1.3.min.js")
		script(src="assets/js/audioEngine.js")
		script(src="assets/js/interaction.js")
		title MPC
		body
			div.container
				div#drumheader
					div.row
						div(class="eight columns logo")
							img(src="assets/images/akailogo.png")
						div(class="four columns")
				div#drummachine
					- for (var rows = 1; rows <= 16; rows += 4)
						div.row
							- for (var columns = rows; columns < rows + 4; columns ++)
								div(class="three columns drumbutton", id="button-#{columns}", data-button="#{columns}")